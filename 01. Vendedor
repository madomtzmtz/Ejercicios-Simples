
package vendedor;
import java.util.Scanner;

public class Vendedor {

    
    public static void main(String[] args) {
        Scanner lee = new Scanner (System.in);
        double suelB;
        double numVent;
        double extCom;
        double total;
        System.out.println(" Ingrese su sueldo base: ");
        suelB = lee.nextInt();
        System.out.println(" Ingrese el n√πmero de ventas en el mes: ");
        numVent = lee.nextInt();
        
        extCom = (10*suelB/100)* numVent;
        System.out.println("Usted Obtendra por concepto de Comisiones: $" + extCom );
        
        total = suelB + extCom;
        System.out.println("Tomando en cuenta su sueldo base y comisiones, Obtendra un total de: $"+ total);
       
    }
}
