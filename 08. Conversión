
package convercion;
import java.util.Scanner;

public class Convercion {

    
    public static void main(String[] args) {
        
        double disMet;
        double Pies = 0.3048;
        double Pul = 0.0254;
        double disPies;
        double disPul;
        
        Scanner lee = new Scanner (System.in);
        System.out.println ("Ingrese la Distancia");
        disMet = lee.nextDouble();
        
        System.out.println ("La distancia en metros es: " + disMet);
        disPies = Pies * disMet ;
        System.out.println ("La distancia en pies es: " + disPies);
        disPul = Pul * disMet;
        System.out.println ("La distancia en pulgadas es: " + disPul);
        
    }
}
